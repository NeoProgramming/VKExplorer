{{define "content"}}
<h1>GROUPS: {{ .Count}}</h1>
<div>
<button type="button" onclick="updateCheckedGroupMembers()">Update GroupMembers</button>
<button type="button" onclick="updateCheckedGroupWall()">Update GroupWall</button>
</div>
<div>
    Search:
    <input type="text" id="search" placeholder="Enter searched text" value=""></input>
    <button type="button" onclick="searchInGroups()">Search</button>
</div>
<div>
    Tags:
</div>
<div>
    Page {{.CurrentPage}} :
    {{if gt .CurrentPage 1}}
    <a href="?page=1">First (1)</a>
    <a href="?page={{.PrevPage}}">Prev ({{.PrevPage}})</a>
    {{else}}
    <span>First</span>
    <span>Prev</span>
    {{end}}
    <a href="?page=0">All</a>
    {{if lt .CurrentPage .TotalPages}}
    <a href="?page={{.NextPage}}">Next ({{.NextPage}})</a>
    <a href="?page={{.TotalPages}}">Last ({{.TotalPages}})</a>
    {{else}}
    <span>Next</span>
    <span>Last</span>
    {{end}}
</div>
<table border='1' style='border-collapse: collapse;' width='100%'>
    <tr>
        <th><input type="checkbox" id="all" name="all" onclick="checkAll()"/></th>
        <th>URL</th>
        <th>Name</th>
        <th>Update</th>
    </tr>
    {{range .Items}}
    <tr>
        <td><input type="checkbox" id="{{.Gid}}" name="{{.Gid}}"/></td>
        <td><a href="https://vk.com/public{{.Gid}}" target="_blank">{{.Gid}}</a></td>
        <td><a href="group/{{.Gid}}">&nbsp;{{.Name}}</a></td>
        <td>{{.UpdateTime}}</td>
    </tr>
    {{end}}
</table>
<div>
    Page {{.CurrentPage}} :
    {{if gt .CurrentPage 1}}
    <a href="?page=1">First (1)</a>
    <a href="?page={{.PrevPage}}">Prev ({{.PrevPage}})</a>
    {{else}}
    <span>First</span>
    <span>Prev</span>
    {{end}}
    <a href="?page=0">All</a>
    {{if lt .CurrentPage .TotalPages}}
    <a href="?page={{.NextPage}}">Next ({{.NextPage}})</a>
    <a href="?page={{.TotalPages}}">Last ({{.TotalPages}})</a>
    {{else}}
    <span>Next</span>
    <span>Last</span>
    {{end}}
</div>
{{end}}
