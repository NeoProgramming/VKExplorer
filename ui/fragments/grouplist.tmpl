{{define "grouplist"}}
<table border='1' style='border-collapse: collapse;' width='100%'>
    <tr>
        <th><input type="checkbox" id="all" name="all" onclick="checkAll()"/>&nbsp;<a href=""><img src="/static/images/no.png"></a></th>
        <th>URL</th>
        <th>Name  {{$var := "text1"}}{{template "sort" . }}</th>
        <th>Oldest{{$var := "text2"}}{{template "sort" . }}</th>
        <th>Newest{{$var := "text3"}}{{template "sort" . }}</th>
    </tr>
    {{range .Items}}
    <tr>
        <td><input type="checkbox" id="{{.Id}}" name="{{.Id}}"/></td>
        <td><a href="https://vk.com/public{{.Id}}" target="_blank">{{.Id}}</a></td>
        <td><a href="/group/{{.Id}}">&nbsp;{{.Name}}</a></td>
        <td>{{.OldestUpdateTime}}</td>
        <td>{{.NewestUpdateTime}}</td>
    </tr>
    {{end}}
</table>
{{end}}
