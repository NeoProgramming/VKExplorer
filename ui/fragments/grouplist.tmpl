{{define "grouplist"}}
<table border='1' style='border-collapse: collapse;' width='100%'>
    <tr>
        <th><input type="checkbox" id="all" name="all" onclick="checkAll()"/></th>
        <th>URL</th>
        <th>Name</th>
        <th>Oldest</th>
        <th>Newest</th>
    </tr>
    {{range .Items}}
    <tr>
        <td><input type="checkbox" id="{{.Id}}" name="{{.Id}}"/></td>
        <td><a href="https://vk.com/public{{.Id}}" target="_blank">{{.Id}}</a></td>
        <td><a href="/group/{{.Id}}">&nbsp;{{.Name}}</a></td>
        <td>{{.OldestUpdateTime}}</td>
        <td>{{.NewestUpdateTime}}</td>
    </tr>
    {{end}}
</table>
{{end}}
